<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddone22"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="395dp"
        android:layout_height="148dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Best Deals on Mobile Phones and Laptops:"
        android:textColor="#000032"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="6dp">

            <ViewFlipper
                android:id="@+id/VFLIPPER"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <!---   <ImageView
        android:layout_width="385dp"
        android:layout_height="375dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/deals" />
-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="112dp"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:background="#000032"
            android:text="Laptops"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button2"
            android:layout_width="119dp"
            android:layout_height="55dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="40dp"
            android:background="#000032"
            android:text="Mobilr Phones"
            android:textColor="#ffffff" />

    </LinearLayout>
</LinearLayout>