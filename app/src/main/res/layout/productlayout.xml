<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProductCategory">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/laptop" />

            <TextView
                android:id="@+id/Categoryname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView6"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Laptops"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prodesc"
                android:text="This is  description of the product This is a description of the product This is a description of the product This is a description of the product This is a description of the product"
                android:layout_below="@id/Categoryname"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:textSize="16dp">
            </TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>