<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrationActivity"
    android:background="@drawable/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000032">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/ic_wave"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/regstrationLayout"

            android:orientation="vertical"
            android:visibility="visible"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text="User Registration Form"
                android:textColor="#000032"
                android:textSize="25dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LogEmaileditText_textInput"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/firsteditText"
                    android:layout_width="255dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="25dp"
                    android:drawablePadding="10dp"
                    android:hint="First Name"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textColorLink="#000032" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/lasteditText"
                    android:layout_width="255dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="25dp"
                    android:drawablePadding="10dp"
                    android:hint="Last Name"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textColorLink="#000032" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/EmaileditText"
                    android:layout_width="255dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="25dp"
                    android:drawableRight="@drawable/ic_baseline_person_outline_24"
                    android:hint=" Email Id"
                    android:inputType="textEmailAddress"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textColorLink="#000032" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">


                <EditText

                    android:id="@+id/passwordeditText"
                    android:layout_width="255dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="25dp"
                    android:drawableRight="@drawable/ic_baseline_lock_24"
                    android:hint=" Password"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textColorLink="#000032" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText

                    android:id="@+id/confirmpasswordeditText"
                    android:layout_width="255dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="25dp"
                    android:drawableRight="@drawable/ic_baseline_lock_24"
                    android:hint=" Confirm Password"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textColorLink="#000032" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/joinbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="65dp"
                    android:background="#000032"
                    android:drawablePadding="10dp"
                    android:text="Register"
                    android:textColor="#ffffff" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A;ready have an Aaccount? "
                    android:textColor="#000032" />

                <TextView
                    android:id="@+id/sinin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textColor="#000032"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
